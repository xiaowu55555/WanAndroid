<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        pv:pv_text_color="#BBDEFB"
        pv:pv_background_color="@color/colorPrimary"
        pv:pv_host_text_size="32sp"
        pv:pv_host_text="WAN"
        pv:pv_particle_text_size="24sp"
        pv:pv_host_text_anim_time="3000"
        pv:pv_particle_text="Android"
        pv:pv_spread_anim_time="1500"
        pv:pv_text_anim_time="1500"/>

</LinearLayout>